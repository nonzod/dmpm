{#
/**
  * @file
  * Default theme implementation for smartweather.
  *
  * Available variables
  * - weather: Weather data object
  * - location: Location data object
  * - user: current user
*/
#}
{% set classes = [
  'weather-widget'
] %}
<div{{ attributes.addClass(classes) }}>

  {% if weather is empty %}
    <p>
      {% trans %}
        Sorry we didn't found data for your location. Please change location.
      {% endtrans %}
    </p>
  {% else %}

    <i class="arrow up"></i>

    <div class="left">
      <label class="weather-widget-location--label">
        <input name="weather_widget_location" class="weather-widget-location" value="{{ location.name }}">
      </label>


      <table class="weather-details">
        <tr class="weather-humidity">
          <td>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                 fill="currentColor" class="bi bi-moisture" viewBox="0 0 16 16">
              <path
                d="M13.5 0a.5.5 0 0 0 0 1H15v2.75h-.5a.5.5 0 0 0 0 1h.5V7.5h-1.5a.5.5 0 0 0 0 1H15v2.75h-.5a.5.5 0 0 0 0 1h.5V15h-1.5a.5.5 0 0 0 0 1h2a.5.5 0 0 0 .5-.5V.5a.5.5 0 0 0-.5-.5h-2zM7 1.5l.364-.343a.5.5 0 0 0-.728 0l-.002.002-.006.007-.022.023-.08.088a28.458 28.458 0 0 0-1.274 1.517c-.769.983-1.714 2.325-2.385 3.727C2.368 7.564 2 8.682 2 9.733 2 12.614 4.212 15 7 15s5-2.386 5-5.267c0-1.05-.368-2.169-.867-3.212-.671-1.402-1.616-2.744-2.385-3.727a28.458 28.458 0 0 0-1.354-1.605l-.022-.023-.006-.007-.002-.001L7 1.5zm0 0-.364-.343L7 1.5zm-.016.766L7 2.247l.016.019c.24.274.572.667.944 1.144.611.781 1.32 1.776 1.901 2.827H4.14c.58-1.051 1.29-2.046 1.9-2.827.373-.477.706-.87.945-1.144zM3 9.733c0-.755.244-1.612.638-2.496h6.724c.395.884.638 1.741.638 2.496C11 12.117 9.182 14 7 14s-4-1.883-4-4.267z"/>
            </svg>
          </td>
          <td>{{ weather.humidity }}%</td>
        </tr>
        <tr class="weather-clouds">
          <td>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                 fill="currentColor" class="bi bi-clouds" viewBox="0 0 16 16">
              <path
                d="M16 7.5a2.5 2.5 0 0 1-1.456 2.272 3.513 3.513 0 0 0-.65-.824 1.5 1.5 0 0 0-.789-2.896.5.5 0 0 1-.627-.421 3 3 0 0 0-5.22-1.625 5.587 5.587 0 0 0-1.276.088 4.002 4.002 0 0 1 7.392.91A2.5 2.5 0 0 1 16 7.5z"/>
              <path
                d="M7 5a4.5 4.5 0 0 1 4.473 4h.027a2.5 2.5 0 0 1 0 5H3a3 3 0 0 1-.247-5.99A4.502 4.502 0 0 1 7 5zm3.5 4.5a3.5 3.5 0 0 0-6.89-.873.5.5 0 0 1-.51.375A2 2 0 1 0 3 13h8.5a1.5 1.5 0 1 0-.376-2.953.5.5 0 0 1-.624-.492V9.5z"/>
            </svg>
          </td>
          <td>{{ weather.clouds ? weather.clouds : '0' }}%</td>
        </tr>
        <tr class="weather-rain">
          <td>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                 fill="currentColor" class="bi bi-cloud-drizzle"
                 viewBox="0 0 16 16">
              <path
                d="M4.158 12.025a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm6 0a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm-3.5 1.5a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 0 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm6 0a.5.5 0 0 1 .316.633l-.5 1.5a.5.5 0 1 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.317zm.747-8.498a5.001 5.001 0 0 0-9.499-1.004A3.5 3.5 0 1 0 3.5 11H13a3 3 0 0 0 .405-5.973zM8.5 2a4 4 0 0 1 3.976 3.555.5.5 0 0 0 .5.445H13a2 2 0 0 1 0 4H3.5a2.5 2.5 0 1 1 .605-4.926.5.5 0 0 0 .596-.329A4.002 4.002 0 0 1 8.5 2z"/>
            </svg>
          </td>
          <td>{{ weather.rain ? weather.rain|round : '0' }}mm</td>
        </tr>
        <tr class="weather-wind">
          <td>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                 fill="currentColor" class="bi bi-wind" viewBox="0 0 16 16">
              <path
                d="M12.5 2A2.5 2.5 0 0 0 10 4.5a.5.5 0 0 1-1 0A3.5 3.5 0 1 1 12.5 8H.5a.5.5 0 0 1 0-1h12a2.5 2.5 0 0 0 0-5zm-7 1a1 1 0 0 0-1 1 .5.5 0 0 1-1 0 2 2 0 1 1 2 2h-5a.5.5 0 0 1 0-1h5a1 1 0 0 0 0-2zM0 9.5A.5.5 0 0 1 .5 9h10.042a3 3 0 1 1-3 3 .5.5 0 0 1 1 0 2 2 0 1 0 2-2H.5a.5.5 0 0 1-.5-.5z"/>
            </svg>
          </td>
          <td>
            {% set unit_wind = weather.units == "metric" ? "m/s" : "m/h" %}
            {{ weather.wind|round }}{{ unit_wind }}
          </td>
        </tr>
      </table>
    </div>

    <div class="right">
      <p>
        <img src="{{ weather.icon }}" alt="{{ weather.description }}" class="weather-icon">
        <span class="weather-description">
          {{ weather.description }}
        </span>
        <span class="weather-temp">
          {{ weather.temp|round }}<sup>o</sup>
        </span>
      </p>
    </div>

    <div class="weather-settings">
      <a href="{{ path('entity.user.edit_form', {'user': user.id}) }}">
        {{ 'Settings'|t }}
      </a>
    </div>

  {% endif %}
</div>
